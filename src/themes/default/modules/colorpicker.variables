/*******************************
          Colorpicker
*******************************/

@focusBoxShadow: inset 0 0 0 1px @focusedFormBorderColor;
@focusInvertedBoxShadow: inset 0 0 0 1px @focusedFormBorderColor;

@borderWidth: 1px;
@border: @borderWidth solid @borderColor;

@gradientOverlay: "@{imagePath}/colorpicker-overlay.svg";
@hueOverlay: "@{imagePath}/colorpicker-hue.svg";
@transparentOverlay: "@{imagePath}/colorpicker-transparent.svg";
